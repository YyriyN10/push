{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "yuna-blocks/call-banner",
  "version": "0.1.0",
  "title": "Банер з закликом",
  "icon": "megaphone",
  "category": "yuna-block-category",
  "description": "Банер з закликом",
  "example": {},
  "attributes": {
    "anchorId": {
      "type": "string"
    },
    "topIndent": {
      "enum": [
        "indent-top-big",
        "indent-top-small"
      ],
      "default": "indent-top-big",
      "type": "string"
    },
    "bottomIndent": {
      "enum": [
        "indent-bottom-big",
        "indent-bottom-small"
      ],
      "default": "indent-bottom-big",
      "type": "string"
    },
    "blockTitle": {
      "type": "string"
    },
    "blockText": {
      "type": "string"
    },
    "imageUrl": {
      "type": "string",
      "default": ""
    },
    "imageId": {
      "type": "number",
      "default": 0
    },
    "imageAlt": {
      "type": "number",
      "default": ""
    },
    "btnColor": {
      "enum": [
        "golden-btn",
        "transparent-btn"
      ],
      "default": "golden-btn",
      "type": "string"
    },
    "btnText": {
      "type": "string"
    },
    "btnAnchor": {
      "type": "string"
    }
  },
  "supports": {
    "color": {
      "background": true,
      "text": true,
      "heading": true,
      "gradients": true
    },
    "html": false
  },
  "textdomain": "yuna",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}